{% extends "common/templates/layout.njk" %}
{% from "components/inset-text/macro.njk" import govukInsetText %}
{% from "components/textarea/macro.njk" import govukTextarea %}
{% from "components/input/macro.njk" import govukInput %}
{% from "components/button/macro.njk" import govukButton %}

{% block pageTitle %}
  Support - GOV.UK Pay
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l govuk-!-margin-bottom-4">
      Help using GOV.UK Pay
    </h1>

    {{
      govukInsetText({
        html: "<a href='https://docs.payments.service.gov.uk/'>Read our documentation</a> to see if our guidance answers your questions."
      })
    }}
    
    <form method="post">
      {{
        govukTextarea({
          name: "message",
          id: "message",
          rows: "8",
          label: {
            text: "Describe what youâ€™re trying to do"
          },
          hint: {
            text: "Do not include personal or financial information, passwords or payment card details."
          },
          errorMessage: error[0].fields.message.message
        })
      }}

      {{
        govukInput({
          label: {
            text: "Name"
          },
          id: "name",
          name: "name",
          errorMessage: error[0].fields.name.message
        })
      }}

      {{
        govukInput({
          label: {
            text: "Email"
          },
          id: "email",
          name: "email",
          type: "email",
          errorMessage: error[0].fields.email.message
        })
      }}

      {{
        govukButton({
          text: "Submit"
        })
      }}
    </form>
  </div>
</div>
{% endblock %}
